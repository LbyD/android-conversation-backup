<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.ugorji.android.conversationbackup" 
          android:versionCode="4"
          android:versionName="1.1" >
  <uses-sdk android:minSdkVersion="7" /><!-- 7 for 2.1, 8 for 2.2, 10 for 2.3.3 -->

  <application android:icon="@drawable/icon" 
               android:label="@string/app_name" 
               ><!-- remove for production: android:debuggable="true"  TBD -->
    <activity android:name=".HomeActivity" android:label="@string/home_activity_name"
              android:launchMode="singleTask" >
      <intent-filter>
        <action android:name="net.ugorji.android.conversationbackup.UPDATE_PROGRESS" />
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".ResultActivity" android:label="@string/result_activity_name" >
      <intent-filter>
        <action android:name="net.ugorji.android.conversationbackup.SHOW_RESULT" />
      </intent-filter>
    </activity>
    <service android:name=".ProcessingService" />
  </application>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_SMS" />
  <uses-permission android:name="android.permission.WRITE_SMS" />
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
  <uses-permission android:name="android.permission.READ_CONTACTS" />
  <uses-permission android:name="android.permission.WRITE_CONTACTS" />
</manifest>
